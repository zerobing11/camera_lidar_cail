<?xml version="1.0"?>
<launch>  

  <node pkg="camera_calibration" type="camera_calibration" name="camera_calibration" respawn="false" output="screen">
    <param name="lidar_config_path" type="string" value="/home/conf/NDTConfig.txt" />
    <param name="root" type="string" value="/home/data" />
    <param name="path_Extrinsic" type="string" value="/home/conf/Extrinsic.txt" />
    <param name="IntrincMatrix" type="int" value="1" />
    <param name="Extrinsic" type="int" value="1" />
    <!-- 角点检测和棋盘格识别阈值参数 -->
    <param name="corner_detect_threshold" type="double" value="0.05" />
    <param name="chessboard_threshold" type="double" value="1.4" />
    <!-- 是否启用按回车键等待功能 -->
    <param name="wait_enter" type="bool" value="true" />
    <!-- RANSAC参数 -->
    <param name="first_ransac_radius" type="double" value="0.3" />
    <param name="first_ransac_threshold" type="double" value="0.05" />
    <param name="second_ransac_radius" type="double" value="0.8" />
    <param name="second_ransac_y_distance_threshold" type="double" value="0.05" />
    <param name="second_ransac_threshold" type="double" value="0.015" />
    <!-- 使用平面中心点约束求解平移向量还是直接使用平面距离约束 true: 使用平面中心点约束; false: 使用平面距离约束 -->
    <param name="use_plane_center_translation" value="true"/>  <!-- 或 false -->
    <!-- 随机采样标定参数 -->
    <param name="sample_iter" type="int" value="3" />
    <param name="sample_data_num" type="int" value="4" />
  </node>  
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find camera_calibration)/launch/test.rviz" />
</launch>
